<h1>New Device</h1>

<%= form_with model: @device, local: true  do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %><br>
    <% @device.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>
  <div>
    <%= @device.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div>
    <%= form.submit %>
  </div>
<% end %>